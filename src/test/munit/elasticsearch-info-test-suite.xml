			<elasticsearch:info doc:name="Elasticsearch - Info" doc:id="a906fdeb-46ec-4389-b4ff-c50cc9a605fa" config-ref="Elasticsearch_HTTP_Config"/>
			<logger level="INFO" doc:name="Logger" doc:id="fea7b3cb-7a34-454c-bf3e-1d83d576e960" message="#[payload]"/>
		</munit:execution>
		<munit:validation>
			<munit-tools:assert-that doc:name="Assert that" doc:id="6a886161-abdf-40be-97be-a178a08e7263" is="#[MunitTools::notNullValue()]" expression="#[payload]"/>
		</munit:validation>
	</munit:test>
